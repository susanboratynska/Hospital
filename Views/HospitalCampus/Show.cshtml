@model HospitalProject.Models.HospitalCampus
@{
    ViewBag.Title = "Show";
}

<h2>Campus Details for: @Model.CampusName</h2>

<div class="navbar">
    <a class="btn btn-info" href="/HospitalCampus/List" role="button"><span class="glyphicon glyphicon-chevron-left" style="padding-right: 2px;"></span>Back to List</a>
    <a class="btn btn-primary btn-sm" href="/HospitalCampus/Update/?CampusID=@Model.CampusID"><span class="glyphicon glyphicon-edit"></span></a>
    <button class="btn btn-danger btn-sm" role="button" data-toggle="modal" data-target="#Delete_@Model.CampusID"><span class="glyphicon glyphicon-remove"></span></button>
    <!-- Modal -->
    <div class="modal fade" id="Delete_@Model.CampusID" tabindex="-1" role="dialog" aria-labelledby="DeleteLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="DeleteLabel">Delete Confirmation</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Would you like to permanently delete <strong>@Model.CampusName</strong>?
                </div>
                <div class="modal-footer">

                    <form method="post" action="/HospitalCampus/Delete/?CampusID=@Model.CampusID">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-danger" name="Delete" value="Delete" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-horizontal">

    <div class="form-group">
        <label for="CampusName" class="col-sm-2 control-label">Campus Name:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.CampusName</p>
        </div>
    </div>

    <div class="form-group">
        <label for="CampusAddressLine1" class="col-sm-2 control-label">Address Line 1:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.CampusAddressLine1</p>
        </div>
    </div>

    <div class="form-group">
        <label for="CampusAddressLine2" class="col-sm-2 control-label">Address Line 2:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.CampusAddressLine2</p>
        </div>
    </div>

    <div class="form-group">
        <label for="CampusCity" class="col-sm-2 control-label">City:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.CampusCity</p>
        </div>
    </div>

    <div class="form-group">
        <label for="CampusProvince" class="col-sm-2 control-label">Province:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.CampusProvince</p>
        </div>
    </div>


    <div class="form-group">
        <label for="CampusPC" class="col-sm-2 control-label">Postal Code:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.CampusPC</p>
        </div>
    </div>

    <div class="form-group">
        <label for="CampusPhone" class="col-sm-2 control-label">Phone:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.CampusPhone</p>
        </div>
    </div>

</div>

