@model List<HospitalProject.Models.HospitalCampus>

@{
    ViewBag.Title = "List";
}

<h2>List of Hospital Campuses</h2>

<div class="navbar">
    <a class="btn btn-success btn-info" href="/HospitalCampus/Add" role="button"><span class="glyphicon glyphicon-plus"></span> Add New Campus</a>
    <form action="/HospitalCampus/List" method="GET" style="display:inline-block; float: right;">
        <input type="text" name="searchkey" id="searchkey" class="btn btn-default search-input" />
        <input type="submit" value="Search" class="btn btn-default" />
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Campus Name</th>
            <th>Address</th>
            <th>City</th>
            <th>Province</th>
            <th>Postal Code</th>
            <th>Phone</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hospitalcampus in @Model)
        {
            <tr>
                <td><a href="Show/?CampusID=@hospitalcampus.CampusID">@hospitalcampus.CampusName</a></td>
                <td>@hospitalcampus.CampusAddressLine1 @hospitalcampus.CampusAddressLine2</td>
                <td>@hospitalcampus.CampusCity</td>
                <td>@hospitalcampus.CampusProvince</td>
                <td>@hospitalcampus.CampusPC</td>
                <td>@hospitalcampus.CampusPhone</td>
                <td><a class="btn btn-primary btn-sm" href="/HospitalCampus/Update/?CampusID=@hospitalcampus.CampusID"><span class="glyphicon glyphicon-edit"></span></a></td>
                <td>
                    <button class="btn btn-danger btn-sm" role="button" data-toggle="modal" data-target="#Delete_@hospitalcampus.CampusID"><span class="glyphicon glyphicon-remove"></button>
                    <!-- Modal -->

                    <div class="modal fade" id="Delete_@hospitalcampus.CampusID" tabindex="-1" role="dialog" aria-labelledby="DeleteLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title" id="DeleteLabel">Delete Confirmation</h3>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Would you like to permanently delete <strong>@hospitalcampus.CampusName</strong>?
                                </div>
                                <div class="modal-footer">
                                    <form method="post" action="/HospitalCampus/Delete/?CampusID=@hospitalcampus.CampusID">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                        <input type="submit" class="btn btn-danger" name="Delete" value="Delete" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>



                </td>
            </tr>
        }
    </tbody>
</table>
