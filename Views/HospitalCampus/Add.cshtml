@model List<HospitalProject.Models.HospitalCampus>

@{
    ViewBag.Title = "Add";
}

<h2>Add Hospital Campus</h2>

<div class="navbar">
    <a class="btn btn-default" href="/HospitalCampus/List" role="button">Back to List</a>
</div>

<form method="POST" action="/HospitalCampus/Add" class="form-horizontal">
    <div class="form-group">
        <label for="CampusName" class="col-sm-2 control-label">Campus Name:</label>
        <div class="col-sm-10">
            <input id="CampusName" class="form-control" type="text" name="CampusName" />
        </div>
    </div>

    <div class="form-group">
        <label for="CampusAddressLine1" class="col-sm-2 control-label">Address Line 1:</label>
        <div class="col-sm-10">
            <input id="CampusAddressLine1" class="form-control" type="text" name="CampusAddressLine1" />
        </div>
    </div>

    <div class="form-group">
        <label for="CampusAddressLine2" class="col-sm-2 control-label">Address Line 2:</label>
        <div class="col-sm-10">
            <input id="CampusAddressLine2" class="form-control" type="text" name="CampusAddressLine2" />
        </div>
    </div>

    <div class="form-group">
        <label for="CampusCity" class="col-sm-2 control-label">City:</label>
        <div class="col-sm-10">
            <input id="CampusCity" class="form-control" type="text" name="CampusCity" />
        </div>
    </div>

    <div class="form-group">
        <label for="CampusProvince" class="col-sm-2 control-label">Province:</label>
        <div class="col-sm-10">
            <input id="CampusProvince" class="form-control" type="text" name="CampusProvince" />
        </div>
    </div>


    <div class="form-group">
        <label for="CampusPC" class="col-sm-2 control-label">Postal Code:</label>
        <div class="col-sm-10">
            <input id="CampusPC" class="form-control" type="text" name="CampusPC" />
        </div>
    </div>

    <div class="form-group">
        <label for="CampusPhone" class="col-sm-2 control-label">Phone:</label>
        <div class="col-sm-10">
            <input id="CampusPhone" class="form-control" type="text" name="CampusPhone" />
        </div>
    </div>

    <div>
        <input type="submit" class="btn btn-default" value="Add Hospital Campus" />
    </div>
    

</form>
