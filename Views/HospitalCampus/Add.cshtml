@model List<HospitalProject.Models.HospitalCampus>

@{
    ViewBag.Title = "Add";
}

<h2>Add Hospital Campus</h2>

<div class="navbar">
    <a class="btn btn-default" href="/HospitalCampus/List" role="button">Back to List</a>
</div>

<form method="POST" action="/HospitalCampus/Add" class="form-horizontal">
    <div class="form-group">
        <label for="campus__name" class="col-sm-2 control-label">Campus Name:</label>
        <div class="col-sm-10">
            <input id="campus__name" class="form-control" type="text" name="campus__name" />
        </div>
    </div>

    <div class="form-group">
        <label for="campus__address1" class="col-sm-2 control-label">Address Line 1:</label>
        <div class="col-sm-10">
            <input id="campus__address1" class="form-control" type="text" name="campus__address1" />
        </div>
    </div>

    <div class="form-group">
        <label for="campus__address2" class="col-sm-2 control-label">Address Line 2:</label>
        <div class="col-sm-10">
            <input id="campus__address2" class="form-control" type="text" name="campus__address2" />
        </div>
    </div>

    <div class="form-group">
        <label for="campus__city" class="col-sm-2 control-label">City:</label>
        <div class="col-sm-10">
            <input id="campus__city" class="form-control" type="text" name="campus__city" />
        </div>
    </div>

    <div class="form-group">
        <label for="campus__province" class="col-sm-2 control-label">Province:</label>
        <div class="col-sm-10">
            <input id="campus__province" class="form-control" type="text" name="campus__province" />
        </div>
    </div>


    <div class="form-group">
        <label for="campus__pc" class="col-sm-2 control-label">Postal Code:</label>
        <div class="col-sm-10">
            <input id="campus__pc" class="form-control" type="text" name="campus__pc" />
        </div>
    </div>

    <div class="form-group">
        <label for="campus__phone" class="col-sm-2 control-label">Phone:</label>
        <div class="col-sm-10">
            <input id="campus__phone" class="form-control" type="text" name="campus__phone" />
        </div>
    </div>

    <input type="submit" class="btn btn-default" value="Add Hospital Campus" />

</form>
