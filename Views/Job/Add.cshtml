@model List<HospitalProject.Models.JobType>
@{
    ViewBag.Title = "Add";
}

<h2>Add Job Post</h2>
<a href="JobsListing">Back to Jobs Listing</a>
<form method="POST" action="/Job/AddJob" class="form-horizontal">
    <div class="form-group">
        <label for="Position" class="col-sm-2 control-label">Position:</label>
        <div class="col-sm-10">
            <input id="Position" class="form-control" type="text" name="Position" required />
        </div>
    </div>

    <div class="form-group">
        <label for="jobTypeSelect" class="col-sm-2 control-label">Job Type:</label>
        <div class="col-sm-10">
            <select class="form-control" name="jobTypeID" id="jobTypeSelect">
                @foreach (var job in Model)
                {
                    <option value="@job.JobTypeID">@job.JobTypeTitle</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="Qualification" class="col-sm-2 control-label">Qualification:</label>
        <div class="col-sm-10">
            <input id="Qualification" class="form-control" type="text" name="Qualification" required />
        </div>
    </div>

    <div class="form-group">
        <label for="Experience" class="col-sm-2 control-label">Experience (In Months):</label>
        <div class="col-sm-10">
            <input id="Experience" class="form-control" type="text" name="Experience" required />
        </div>
    </div>

    <div>
        <input type="submit" class="btn btn-primary" value="Add Job" />
    </div>
</form>