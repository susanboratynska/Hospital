@{
    ViewBag.Title = "Apply";
}

<h2>Add Job Post</h2>
<a href="JobsListing">Back to Jobs Listing</a>
<form method="POST" action="/Job/ApplyConfirm" class="form-horizontal">
    <div class="form-group">
        <label for="FullName" class="col-sm-2 control-label">Full Name:</label>
        <div class="col-sm-10">
            <input id="FullName" class="form-control" type="text" name="FullName" required />
        </div>
    </div>
    <div class="form-group">
        <label for="Email" class="col-sm-2 control-label">Email:</label>
        <div class="col-sm-10">
            <input id="Email" class="form-control" type="text" name="Email" required />
        </div>
    </div>
    <div class="form-group">
        <label for="PhoneNumber" class="col-sm-2 control-label">Phone Number:</label>
        <div class="col-sm-10">
            <input id="PhoneNumber" class="form-control" type="text" name="PhoneNumber" required />
        </div>
    </div>
    <div class="form-group">
        <label for="ResumeLink" class="col-sm-2 control-label">Resume:</label>
        <div class="col-sm-10">
            <input id="ResumeLink" class="form-control" type="file" name="ResumeLink" required />
        </div>
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Apply" />
    </div>
</form>
