@model HospitalProject.Models.PatientEcards

@{
    ViewBag.Title = "Show";
}

<h2>Patient Ecard Details</h2>
<h4>Card ID: @Model.PatientCardID</h4>

<div class="navbar">
    <a class="btn btn-default" href="/PatientEcard/List" role="button">Back to List</a>
    @if (Model.CardDelivered == false)
    {
        <button class="btn btn-danger" role="button" data-toggle="modal" data-target="#Deliver_@Model.PatientCardID">Click to Deliver</button>
    }

    <!-- Modal -->
    <div class="modal fade" id="Deliver_@Model.PatientCardID" tabindex="-1" role="dialog" aria-labelledby="DeliverLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="DeliverLabel">Deliver Confirmation</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Please confirm card delivery.
                </div>
                <div class="modal-footer">
                    <form method="post" action="/PatientEcard/Deliver/?PatientCardID=@Model.PatientCardID">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-danger" name="Deliver" value="Deliver" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Delivery Status:</label>
            <div class="col-sm-10">
                @if (@Model.CardDelivered == false)
                {
                    <p class="form-control-static">No</p>
                }
                else
                {
                    <p class="form-control-static">Yes</p>
                }
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Patient:</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.PatientFirstname @Model.PatientLastname</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Sender:</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.SenderFirstname @Model.SenderLastname</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Host:</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.CardSubject</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Date:</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.CardMessage</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Location:</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.HospitalCampus.CampusName</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Patient Room:</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.PatientRoom</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Time:</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.Date</p>
            </div>
        </div>
    </div>





