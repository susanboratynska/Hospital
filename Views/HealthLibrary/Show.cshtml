@model HospitalProject.Models.HealthLibrary

@{
    ViewBag.Title = "Show";
}

<h2>Details for @Model.Title</h2>
<a class="btn btn-default pull-right" href="/HealthLibrary/List" role="button">Back</a>
<div class="form-group">
    <label for="Title">Title:</label>
    <p id="Title">@Model.Title</p>
</div>
<div class="form-group">
    <label for="Date">Date:</label>
    <p id="Date">@Model.Date.ToString("yyyy-MM-dd")</p>
</div>
<div>
    <label>Published:</label>
    <p>@Model.Published</p>
</div>
<div>
    <label>Body:</label>
    <p>@Model.Body</p>
</div>
<form action="/HealthLibrary/Delete/?HealthLibraryID=@Model.HealthLibraryID" method="post" class="text-center">
    <a class="btn btn-primary" href="/HealthLibrary/Update/?HealthLibraryID=@Model.HealthLibraryID">Update</a>
    <button type="submit" onclick="if (!confirm('Are you sure you want to delete this record?')) return false;" class="btn btn-danger">Delete</button>
</form>