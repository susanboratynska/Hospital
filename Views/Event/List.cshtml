@model List<HospitalProject.Models.Event>

@{
    ViewBag.Title = "List";
}

<h2>List of Events</h2>

<div class="navbar">
    <form action="/Event/List" method="GET">
        <input type="text" name="searchkey" id="searchkey" class="btn btn-default search-input" />
        <input type="submit" value="Search" class="btn btn-default" />
    </form>
    <a class="btn btn-default" href="/Event/Add" role="button">Add New Event</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Date</th>
            <th>Department</th>
            <th>Campus</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Event in @Model)
        {
            <tr>
                <td><a href="/Event/Show/?EventID=@Event.EventID">@Event.EventTitle</a></td>
                <td>@Event.EventDescription</td>
                <td>@Event.EventLocation</td>
                <td>@Event.EventDate</td>
                <td>@Event.EventHostingDepartment</td>
                <td>@Event.HospitalCampus.CampusName</td>
                <td><a class="btn btn-default" href="/Event/Update/?EventID=@Event.EventID">Update</a></td>
            </tr>
        }
    </tbody>
</table>