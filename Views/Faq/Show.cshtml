@model HospitalProject.Models.Faq

@{
    ViewBag.Title = "Show";
}

<h2>Details for @Model.Question</h2>

<a class="btn btn-default pull-right" href="/Faq/List" role="button">Back</a>
<div class="form-group">
    <label for="Question">Question:</label>
    <p id="Question">@Model.Question</p>
</div>
<div class="form-group">
    <label for="Answer">Answer:</label>
    <p id="Answer">@Model.Answer</p>
</div>
<div>
    <label>Published:</label>
    <p>@Model.Published</p>
</div>

<form action="/Faq/Delete/?FaqID=@Model.FaqID" method="post" class="text-center">
    <a class="btn btn-primary" href="/Faq/Update/?FaqID=@Model.FaqID">Update</a>
    <button type="submit" onclick="if (!confirm('Are you sure you want to delete this record?')) return false;" class="btn btn-danger">Delete</button>
</form>