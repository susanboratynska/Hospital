
@{
    ViewBag.Title = "Add";
}

<h2>Add a new Service</h2>
<div class="navbar">
    <a class="navlink" href="/Service/List">Back to List</a>
</div>
<form method="post" action="/Service/Add">
    <div class="sectionheader">
        Service Details
    </div>
    <div class="form-group">
        <span>Service Name:</span>
        <input type="text" name="ServiceName" id="ServiceName" />
    </div>
    <div class="form-group">
        <span>Service Details:</span>
        <input type="text" name="ServiceDetails" id="ServiceDetails" />
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Add Service" />
    </div>
</form>

